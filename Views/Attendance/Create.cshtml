@model kursach.Models.Attendance

@{
    ViewBag.Title = "Добавление посещаемости";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новое посещение</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.AttendanceID)

            <div class="form-group row">
                @Html.LabelFor(model => model.DancerID, "Танцор",
                    new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("DancerID", null, "-- Выберите танцора --",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DancerID, "",
                        new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.TimetableID,
                    new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("TimetableID", null, "-- Выберите занятие --",
                        new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.TimetableID, "",
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AttendanceDate,
                    new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AttendanceDate,
                        new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.AttendanceDate, "",
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.IsPresent,
                    new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.IsPresent,
                            new { @class = "form-check-input" })
                        <label class="form-check-label" for="IsPresent">
                            Танцор присутствовал на занятии
                        </label>
                    </div>
                    @Html.ValidationMessageFor(model => model.IsPresent, "",
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Сохранить
                    </button>
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#bulkModal">
                        <i class="fas fa-users"></i> Массовая отметка
                    </button>
                    @Html.ActionLink("Назад к списку", "Index", null,
                        new { @class = "btn btn-secondary" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}