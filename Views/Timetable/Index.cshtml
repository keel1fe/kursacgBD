@model IEnumerable<kursach.Models.Timetable>

@{
    ViewBag.Title = "Расписание";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Получаем роль из Session
    var userRole = Session["UserRole"]?.ToString() ?? "";
    var isAdmin = userRole == "admin";
    var isCoach = userRole == "coach";
    var isDancer = userRole == "dancer";
}

<div class="container">
    <h2>Расписание занятий</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a href="@Url.Action("Index1", "Home")" class="btn btn-primary">
                <i class="fas fa-calendar-plus"></i> На главную страницу
            </a>
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Index", "Timetable", FormMethod.Get, new { @class = "form-inline float-right" }))
            {
                <div class="input-group">
                    <select name="day" class="form-control">
                        <option value="">Все дни</option>
                        @foreach (var day in ViewBag.DaysOfWeek)
                        {
                            <option value="@day" @(ViewBag.SelectedDay == day ? "selected" : "")>
                                @day
                            </option>
                        }
                    </select>
                    <select name="coachId" class="form-control ml-2">
                        <option value="">Все тренеры</option>
                        @foreach (var coach in ViewBag.Coaches)
                        {
                            <option value="@coach.CoachID"
                                    @(ViewBag.SelectedCoachId == coach.CoachID ? "selected" : "")>
                                @coach.LastNameC
                            </option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-filter"></i> Фильтр
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>День недели</th>
                    <th>Время</th>
                    <th>Продолжительность</th>
                    <th>Тренер</th>
                    <th>Группа</th>
                    <th>Зал</th>
                    <th>Тип занятия</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Dayofweek</td>
                        <td>@item.Time.ToString(@"hh\:mm\:ss")</td>
                        <td>@item.Duration ч.</td>
                        <td>@Html.DisplayFor(modelItem => item.Coach.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Group.GroupName)</td>
                        <td>Зал @item.Hall</td>
                        <td>
                            <span class="badge
                                @(item.Type == "Индивидуальное" ? "badge-primary" :
                                  item.Type == "Групповое" ? "badge-success" :
                                  item.Type == "Мастер-класс" ? "badge-warning" : "badge-info")"style="color: #000 !important; font-weight: normal !important;">
                                @item.Type
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Просмотреть", "Details", new { id = item.TimetableID },
                                    new { @class = "btn btn-info btn-sm" })
                                @if (isAdmin)
                                {
                                    @Html.ActionLink("Редактировать", "Edit", new { id = item.TimetableID },
                                             new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Удалить", "Delete", new { id = item.TimetableID },
                                             new { @class = "btn btn-danger btn-sm" })
                                }
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Занятия не найдены. @Html.ActionLink("Добавить занятие", "Create")
        </div>
    }

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5>Расписание по дням</h5>
                </div>
                <div class="card-body">
                    @{
                        var groupedByDay = Model.GroupBy(t => t.Dayofweek)
                                                .OrderBy(g =>
                                                    g.Key == "Понедельник" ? 1 :
                                                    g.Key == "Вторник" ? 2 :
                                                    g.Key == "Среда" ? 3 :
                                                    g.Key == "Четверг" ? 4 :
                                                    g.Key == "Пятница" ? 5 :
                                                    g.Key == "Суббота" ? 6 : 7);
                    }
                    @foreach (var dayGroup in groupedByDay)
                    {
                        <h6 class="mt-3">@dayGroup.Key</h6>
                        <ul class="list-group">
                            @foreach (var item in dayGroup.OrderBy(t => t.Time))
                            {
                                <li class="list-group-item">
                                    @item.Time.ToString(@"hh\:mm\:ss")
                                    @item.Coach.FullName (@item.Group.GroupName) -
                                    Зал @item.Hall
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}