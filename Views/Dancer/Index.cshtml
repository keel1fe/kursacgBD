@model IEnumerable<kursach.Models.Dancer>

@{
    ViewBag.Title = "Список танцоров";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Получаем роль из Session
    var userRole = (Session["UserRole"]?.ToString() ?? "");
    var isAdmin = userRole == "admin";
    var isCoach = userRole == "coach";
    var isDancer = userRole == "dancer";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewBag.Title</h2>

            <!-- Поиск и возвращение на главную страницу -->
            <div class="search-container">
                <div class="row">
                    <div class="col-md-8">
                        @using (Html.BeginForm("Index", "Dancer", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <div class="input-group w-100">
                                <input type="text" name="search" class="form-control"
                                       placeholder="Поиск по ФИО..."
                                       value="@ViewBag.CurrentFilter">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search"></i> Найти
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-4 text-right">
                        @Html.ActionLink("На главную страницу", "Index1", "Home", null,
                            new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>

            <!-- Таблица танцоров -->
            <div class="table-responsive">
                <table class="table dancers-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Дата рождения</th>
                            <th>Телефон</th>
                            <th>Email</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(modelItem => item.DancerID)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                                <td>@item.DateofBirthday.ToString("dd.MM.yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-primary">@item.Email</a>
                                </td>
                                <td class="actions-column">
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Просмотреть", "Details", new { id = item.DancerID },
                                            new { @class = "btn btn-outline-info btn-sm" })
                                            @Html.ActionLink("Редактировать", "Edit", new { id = item.DancerID },
                                                new { @class = "btn btn-outline-warning btn-sm" })
                                            @Html.ActionLink("Удалить", "Delete", new { id = item.DancerID },
                                                new { @class = "btn btn-outline-danger btn-sm" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Если нет данных -->
            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4 text-center">
                    <i class="fas fa-info-circle"></i> Танцоров не найдено.
                    @Html.ActionLink("Добавить первого танцора", "Create")
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}